root: true

parserOptions:
  ecmaVersion: 2018
  sourceType: "module"

env:
  es2017: true
  browser: true

extends:
  "htmlacademy/vanilla"

{
  "rules": {
    "comma-dangle": "off",
    "@typescript-eslint/comma-dangle": ["error", {
        "arrays": "never",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "never"
    }]
  }
}
